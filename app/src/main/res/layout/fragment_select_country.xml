<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_inset"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_frame_border_c2"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/SelectCountry"
                android:textColor="@android:color/black"
                android:textSize="@dimen/xlar_text_size" />

            <Button
                android:id="@+id/btn_done"
                style="@android:style/Holo.Light.ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_button_square2"
                android:gravity="right"
                android:text="@string/Done"
                android:textSize="@dimen/nor_text_size"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/normal_margin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_maps"
                android:padding="@dimen/component_margin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_margin"
                android:background="@color/grey_header"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/normal_margin">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uae_flag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/screen_margin_small"
                    android:text="@string/uae"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/nor_text_size" />

                <RadioButton
                    android:id="@+id/rb_uae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_button_style1"
                    android:button="@android:color/transparent"
                    android:layout_marginLeft="@dimen/normal_margin"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_margin"
                android:background="@color/grey_header"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/normal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/india_flag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/screen_margin_small"
                    android:text="@string/india"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/nor_text_size"  />

                <RadioButton
                    android:id="@+id/rb_india"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/radio_button_style1"
                    android:button="@android:color/transparent"
                    android:layout_marginLeft="@dimen/normal_margin" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>