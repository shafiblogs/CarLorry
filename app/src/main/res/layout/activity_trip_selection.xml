<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_continue"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/lay_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/start_date"
                    style="@style/tv_larg_black"
                    android:text="Start Date" />

                <TextView
                    android:id="@+id/tv_start_date"
                    style="@style/tv_medium_black"
                    android:layout_marginTop="@dimen/component_margin" />

                <TextView
                    android:id="@+id/tv_start_time"
                    style="@style/tv_small_black"
                    android:layout_marginTop="@dimen/space_margin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_end"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/lt_grey"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/end_date"
                    style="@style/tv_larg_black"
                    android:text="End Date" />

                <TextView
                    android:id="@+id/tv_end_date"
                    style="@style/tv_medium_black"
                    android:layout_marginTop="@dimen/component_margin" />

                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/tv_small_black"
                    android:layout_marginTop="@dimen/space_margin" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/horizontal_line" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:gravity="center"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="@dimen/lar_text_size" />
</RelativeLayout>