<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="#f4f4f4"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtViewItemName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:text="BMW - X5"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="4dp"
                    android:scaleType="fitStart"
                    android:src="@android:drawable/ic_menu_my_calendar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingLeft="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="left"
                    android:text="Sat, 03 Sep 11:00"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Sat, 06 Sep 16:00"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="#d1d1d1"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="4dp"
                    android:scaleType="fitStart"
                    android:src="@android:drawable/ic_menu_myplaces" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:text="Jumeirah Resd."
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Dubai, UAE"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.88"
            android:orientation="vertical">


            <TabHost
                android:id="@+id/tabHost"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/CarDetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fillViewport="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="1">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.3"
                                            android:orientation="vertical"
                                            android:padding="2dp">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:paddingLeft="2dp"
                                                android:paddingRight="2dp"
                                                android:paddingTop="4dp"
                                                android:src="@drawable/sample_img_1" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.7"
                                            android:orientation="vertical"
                                            android:padding="2dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="45dp"
                                                android:orientation="horizontal"
                                                android:padding="0dp"
                                                android:weightSum="1">

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.5"
                                                    android:background="@drawable/theme_frame_border_c4"
                                                    android:gravity="center_vertical"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"
                                                        android:paddingTop="4dp"
                                                        android:src="@drawable/seat_icon" />

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="left"
                                                        android:paddingLeft="15dp"
                                                        android:text="5 Seat"
                                                        android:textColor="#333333"
                                                        android:textSize="18sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.5"
                                                    android:background="@drawable/theme_frame_border_c4"
                                                    android:gravity="center_vertical"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"
                                                        android:paddingTop="4dp"
                                                        android:src="@drawable/musics_icon" />

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="left"
                                                        android:paddingLeft="15dp"
                                                        android:text="Audio System"
                                                        android:textColor="#333333"
                                                        android:textSize="18sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="45dp"
                                                android:orientation="horizontal"
                                                android:padding="0dp"
                                                android:weightSum="1">

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.5"
                                                    android:background="@drawable/theme_frame_border_c4"
                                                    android:gravity="center_vertical"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"
                                                        android:paddingTop="4dp"
                                                        android:src="@drawable/gps_icon" />

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="left"
                                                        android:paddingLeft="15dp"
                                                        android:text="GPS"
                                                        android:textColor="#333333"
                                                        android:textSize="18sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.5"
                                                    android:background="@drawable/theme_frame_border_c4"
                                                    android:gravity="center_vertical"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"
                                                        android:paddingTop="4dp"
                                                        android:src="@drawable/bluetooth_icon" />

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="left"
                                                        android:paddingLeft="15dp"
                                                        android:text="Bluetooth"
                                                        android:textColor="#333333"
                                                        android:textSize="18sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="45dp"
                                                android:orientation="horizontal"
                                                android:padding="0dp"
                                                android:weightSum="1">

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.5"
                                                    android:background="@drawable/theme_frame_border_c4"
                                                    android:gravity="center_vertical"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"
                                                        android:paddingTop="4dp"
                                                        android:src="@drawable/ac_icon" />

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="left"
                                                        android:paddingLeft="15dp"
                                                        android:text="AC"
                                                        android:textColor="#333333"
                                                        android:textSize="18sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.5"
                                                    android:background="@drawable/theme_frame_border_c4"
                                                    android:gravity="center_vertical"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"
                                                        android:paddingTop="4dp"
                                                        android:src="@drawable/power_window_icon" />

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="left"
                                                        android:paddingLeft="15dp"
                                                        android:text="Power Window"
                                                        android:textColor="#333333"
                                                        android:textSize="18sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="45dp"
                                                android:orientation="horizontal"
                                                android:padding="0dp"
                                                android:weightSum="1">

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.5"
                                                    android:background="@drawable/theme_frame_border_c4"
                                                    android:gravity="center_vertical"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"
                                                        android:paddingTop="4dp"
                                                        android:src="@drawable/car_gear_icon" />

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="left"
                                                        android:paddingLeft="15dp"
                                                        android:text="Manual"
                                                        android:textColor="#333333"
                                                        android:textSize="18sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="match_parent"
                                                    android:layout_weight="0.5"
                                                    android:background="@drawable/theme_frame_border_c4"
                                                    android:gravity="center_vertical"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left"
                                                        android:paddingLeft="2dp"
                                                        android:paddingRight="2dp"
                                                        android:paddingTop="4dp"
                                                        android:src="@drawable/petrol_icon" />

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="left"
                                                        android:paddingLeft="15dp"
                                                        android:text="Diesel"
                                                        android:textColor="#333333"
                                                        android:textSize="18sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>


                                            </LinearLayout>

                                        </LinearLayout>


                                    </LinearLayout>
                                </LinearLayout>
                            </ScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/TariffDetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fillViewport="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="1">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:layout_marginBottom="5dp"
                                            android:background="#f4f4f4"
                                            android:orientation="horizontal">


                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="5dp"
                                                android:gravity="left|center_vertical"
                                                android:paddingBottom="5dp"
                                                android:text="@string/tariffdetails"
                                                android:textColor="#333333"
                                                android:textSize="18sp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/theme_frame_border_c4"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:padding="7dp"
                                            android:weightSum="1">


                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.7"
                                                android:gravity="left"
                                                android:text="@string/faretotal"
                                                android:textColor="#333333"
                                                android:textSize="18sp"
                                                android:textStyle="normal" />

                                            <TextView
                                                android:id="@+id/FareTotal"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.3"
                                                android:gravity="right"
                                                android:text="7000"
                                                android:textColor="#333333"
                                                android:textSize="18sp"
                                                android:textStyle="normal" />

                                            <TextView
                                                android:id="@+id/FareTotalCurrency"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="right"
                                                android:paddingLeft="7dp"
                                                android:text="AED"
                                                android:textColor="#333333"
                                                android:textSize="16sp"
                                                android:textStyle="normal" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/theme_frame_border_c4"
                                            android:gravity="center_vertical"
                                            android:orientation="vertical"
                                            android:padding="7dp"
                                            android:weightSum="1">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:orientation="horizontal"
                                                android:weightSum="1">

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="0.7"
                                                    android:gravity="left"
                                                    android:text="@string/RefundableDeposit"
                                                    android:textColor="#333333"
                                                    android:textSize="18sp"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/DepositTotal"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="0.3"
                                                    android:gravity="right"
                                                    android:text="25000"
                                                    android:textColor="#333333"
                                                    android:textSize="18sp"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/DepositTotalCurrency"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="right"
                                                    android:paddingLeft="7dp"
                                                    android:text="AED"
                                                    android:textColor="#333333"
                                                    android:textSize="16sp"
                                                    android:textStyle="normal" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:orientation="horizontal"
                                                android:paddingTop="7dp"
                                                android:weightSum="1">


                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="left"
                                                    android:text="@string/RefundableDepositDescription"
                                                    android:textColor="#666666"
                                                    android:textSize="14sp"
                                                    android:textStyle="normal" />


                                            </LinearLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/theme_frame_border_c4"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:padding="7dp"
                                            android:weightSum="1">


                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.7"
                                                android:gravity="left"
                                                android:text="@string/PayableAmount"
                                                android:textColor="#333333"
                                                android:textSize="18sp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/PayableTotal"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.3"
                                                android:gravity="right"
                                                android:text="32000"
                                                android:textColor="#333333"
                                                android:textSize="18sp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/PayableTotalCurrency"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="right"
                                                android:paddingLeft="7dp"
                                                android:text="AED"
                                                android:textColor="#333333"
                                                android:textSize="16sp"
                                                android:textStyle="normal" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </ScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Map"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.6"
                                    android:orientation="vertical"
                                    android:padding="2dp">

                                    <!-- Add Map Element-->

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.4"
                                    android:orientation="vertical"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="5dp"
                                        android:text="Jumeirah Resd."
                                        android:textColor="@android:color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Dubai, UAE"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>
            </TabHost>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_book"
        style="@style/footer_button"
        android:layout_alignParentBottom="true"
        android:text="@string/book" />
</RelativeLayout>
