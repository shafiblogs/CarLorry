<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="My.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/bpTransparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="text_view" parent="wrap_wrap">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/space_margin</item>
        <item name="android:textSize">@dimen/med_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tv_medium_black" parent="text_view">
        <item name="android:textSize">@dimen/med_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_small_black" parent="text_view">
        <item name="android:textSize">@dimen/sml_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_larg_black" parent="text_view">
        <item name="android:textSize">@dimen/lar_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cardBottomTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/med_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="footer_button" parent="match_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/theme_button_square3_blue2</item>
        <item name="android:textSize">@dimen/lar_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_header" parent="match_wrap">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:background">#f4f4f4</item>
        <item name="android:textSize">@dimen/lar_text_size</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/screen_margin</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Dark theme. -->
    <style name="CaldroidDefaultDark" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultDarkCalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultDarkMonthName</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultDarkNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultDarkSquareCell</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultDarkGridView</item>
    </style>

    <style name="CaldroidDefaultDarkCalendarViewLayout">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CaldroidDefaultDarkMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/caldroid_black</item>
    </style>

    <style name="CaldroidDefaultDarkGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/caldroid_lighter_gray</item>
    </style>

    <style name="CaldroidDefaultDarkCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/cell_text_color</item>
        <item name="android:background">@drawable/green_cell_bg_cal</item>
    </style>

    <style name="CaldroidDefaultDarkNormalCell" parent="CaldroidDefaultDarkCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="CaldroidDefaultDarkSquareCell" parent="CaldroidDefaultDarkCell" />

    <!-- Dark theme. -->
    <style name="CaldroidDefaultDarkEndDate" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultDarkCalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultDarkMonthName</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultDarkNormalCellEndDate</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultDarkSquareCell</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultDarkGridView</item>
    </style>
    <style name="CaldroidDefaultDarkCellEndDate" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/cell_text_color</item>
        <item name="android:background">@drawable/red_cell_bg_cal</item>
    </style>
    <style name="CaldroidDefaultDarkNormalCellEndDate" parent="CaldroidDefaultDarkCellEndDate">
        <item name="android:padding">5dp</item>
    </style>
</resources>
