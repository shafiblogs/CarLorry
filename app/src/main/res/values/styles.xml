<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="text_view" parent="wrap_wrap">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/space_margin</item>
        <item name="android:textSize">@dimen/med_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tv_medium_black" parent="text_view">
        <item name="android:textSize">@dimen/med_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_small_black" parent="text_view">
        <item name="android:textSize">@dimen/sml_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_larg_black" parent="text_view">
        <item name="android:textSize">@dimen/lar_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cardBottomTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/med_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
